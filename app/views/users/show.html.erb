
<div class="row">
 
  <div class="col-md-8">
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if user_signed_in? %>
    <% if @user.posts.any? %>
      <h3>posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= @user.posts.each do |post| %>
          <%= link_to post.title, post_path(post) %><br>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>