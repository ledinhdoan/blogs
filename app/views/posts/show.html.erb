<div class="col-sm-11 col-xs-12 blog-content">
  
  <h2 class="text-center"><%= @post.title %></h2>
  <h5 class="text-center">Submitted <%= time_ago_in_words(@post.created_at)%> ago</h5>
  <% if (current_user && @post == current_user.post.find_by(id: params[:id])) %>
  <%= link_to "Edit post   |", edit_post_path %>
  <%= link_to "Delete post", post_path(@post), method: :delete, data: {confirm: "Are you sure ?"} %>
  <%end%>
  <div><%=  @post.body %></div>
  
 <%= render 'comments/comment' %>
</div>