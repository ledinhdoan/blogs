<div id="post_content">
  <h1 class="text-center"><%= @post.title %></h1>
  <h5 class="text-center">Submitted <%= time_ago_in_words(@post.created_at)%> ago</h5>
  <p class="text-center">
  <%=  @post.body %>
  </p>
   <div class="text-center">
  <% if (current_user && @post == current_user.posts.find_by(id: params[:id])) %> 
 
  <%= link_to "Edit post   |", edit_post_path %>
  <%= link_to "Delete post", post_path(@post), method: :delete, data: {confirm: "Are you sure ?"} %>
  <%end%>
  
 <%= render 'comments/comment' %>
</div>	
</div>